<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_poster"
        android:layout_width="166dp"
        android:layout_height="250dp"
        app:srcCompat="@drawable/poster_bumblebee"
        android:contentDescription="@string/img_poster" />

    <TextView
        android:id="@+id/tv_title_movie"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/img_poster"
        tools:text="@string/title_movie"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginStart="16dp"
        android:maxLines="1"/>

    <TextView
        android:id="@+id/tv_release_date_movie"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_toEndOf="@id/img_poster"
        tools:text="@string/release_date_movie"
        android:layout_marginStart="16dp"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_description_movie"
        style="@style/Widget.AppCompat.TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_toEndOf="@id/img_poster"
        tools:text="@string/description_movie"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:maxLines="4"/>
</RelativeLayout>